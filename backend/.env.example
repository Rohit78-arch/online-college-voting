# Server
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000

# MongoDB
MONGO_URI=mongodb://127.0.0.1:27017/Online_college_voting

# JWT
JWT_SECRET=replace_with_strong_secret
JWT_EXPIRES_IN=7d

# OTP Settings
OTP_LENGTH=6
OTP_TTL_MINUTES=10
OTP_COOLDOWN_SECONDS=60

# Email (Nodemailer) - use Mailtrap/Gmail App Password in dev
EMAIL_FROM_NAME=College Voting System
EMAIL_FROM_ADDRESS=no-reply@college.edu
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_pass

# SMS (Twilio)
# NOTE: Mobile should be in E.164 format (e.g., +919876543210)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_FROM_NUMBER=+1xxxxxxxxxx

# File uploads
UPLOAD_DIR=uploads
MAX_UPLOAD_MB=5
